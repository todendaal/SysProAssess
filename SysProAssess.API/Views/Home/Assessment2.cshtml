    <br />
    Box<input type="text" id="txtCurrentBox" value="11" /><br />
    Dir<input type="text" id="txtCurrentDirection" value="90" />
</div>


<div class="text-center">
    <table class="table-bordered border-1 border-dark" style="background-color:transparent;">
        @for (var iline = 1; iline <= 90; iline=iline+3)
        {
            <tr  class="">
            @for (var icol = 1; icol <= 30; icol++)
            {
                    var itemNr = (iline * 10) + icol;
                    var itemID = "b_" +  itemNr.ToString();
                    if(itemNr==11)
                    {
                        <td class="stanBox currentPlace border-1 border-top border-start m-0 p-0 border-dark" style="font-size:9px;" id="@itemID">&nbsp;@itemNr</td>
                    }
                    else
                    {
                        <td class="stanBox border-1 border-top border-start m-0 p-0 border-dark" style="font-size:9px;" id="@itemID">&nbsp;@itemNr</td>
                    }
                    
            }
            </tr>
        }
    </table>
</div>
