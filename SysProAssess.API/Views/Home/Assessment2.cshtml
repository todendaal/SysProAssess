        <tr class="m-0 p-0">
            <td><button type="button" class="btn btn-primary" onclick="brnClick(3)"><i class="fa fa-arrow-left"></i></button></td>
            <td><button id="btnSmoke" type="button" class="btn btn-primary" onclick="brnClick(4)"><i class="fas fa-wallet"></i></button></td>
